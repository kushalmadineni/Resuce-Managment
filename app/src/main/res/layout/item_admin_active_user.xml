<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/std_10_dp"
    android:layout_marginBottom="@dimen/std_10_dp"
    android:layout_marginLeft="@dimen/std_4_dp"
    android:layout_marginStart="@dimen/std_4_dp"
    android:layout_marginEnd="@dimen/std_4_dp"
    android:layout_marginRight="@dimen/std_4_dp"
    android:background="@color/colorWhite"
    android:elevation="@dimen/std_4_dp"
    android:orientation="vertical"
    app:layout_constraintCircleRadius="@dimen/std_4_dp">

    <LinearLayout
        android:id="@+id/role_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_role"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/std_10_dp"
            android:layout_weight="1"
            android:gravity="start|center"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/switch_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_switch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/std_10_dp"
                android:layout_marginBottom="@dimen/std_10_dp"
                android:layout_weight="1"
                android:gravity="end|center"
                android:text="Active"
                android:textColor="@color/success_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/active_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/std_10_dp"
                android:layout_marginBottom="@dimen/std_10_dp"
                android:layout_weight="1"
                android:checked="true"
                android:clickable="false"
                android:layout_marginRight="@dimen/std_4_dp"
                android:layout_marginEnd="@dimen/std_4_dp"
                android:gravity="start|center" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/name_details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/name_main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_name_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/std_10_dp"
                android:layout_marginTop="@dimen/std_10_dp"
                android:layout_marginBottom="@dimen/std_10_dp"
                android:layout_weight="1.8"
                android:gravity="start|center"
                android:text="Name:"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/std_10_dp"
                android:layout_marginBottom="@dimen/std_10_dp"
                android:layout_weight="1"
                android:gravity="start|center"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>


        <TextView
            android:id="@+id/text_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/std_10_dp"
            android:layout_weight="1.2"
            android:gravity="end|center"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>