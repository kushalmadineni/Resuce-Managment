<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/std_80_dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/std_10_dp"
    android:background="@color/colorWhite"
    app:layout_constraintCircleRadius="@dimen/std_4_dp"
    android:elevation="@dimen/std_4_dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="@dimen/std_40_dp"
        android:layout_height="@dimen/std_40_dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/std_10_dp"
        android:contentDescription="settings icon"
        android:src="@drawable/empty_image" />

    <TextView
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:text="@string/app_name"
        android:gravity="start|center"
        android:textStyle="bold"
        android:layout_margin="@dimen/std_10_dp"
        android:textColor="@color/colorBlack"
        android:textSize="16sp" />

</LinearLayout>