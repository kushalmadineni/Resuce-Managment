<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/picture_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_account_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/std_10_dp"
            android:layout_marginTop="@dimen/std_60_dp"
            android:layout_marginRight="@dimen/std_10_dp"
            android:background="@android:color/transparent"
            app:cardCornerRadius="@dimen/std_20_dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_corners"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corners_top_white">

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/std_56_dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corners_bottom"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/std_40_dp"
                        android:layout_marginEnd="@dimen/std_20_dp"
                        android:visibility="visible"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_camera"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/std_34_dp"
                            android:layout_weight="3"
                            android:layout_gravity="center|end"
                            android:src="@drawable/ic_cam_latest"
                            android:backgroundTint="@color/colorAccent"
                            android:contentDescription="Image Camera" />

                        <TextView
                            android:id="@+id/text_camera"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/std_6_dp"
                            android:layout_marginBottom="@dimen/std_10_dp"
                            android:layout_weight="1"
                            android:gravity="start|center"
                            android:text="Camera"
                            android:textColor="#333A42"
                            android:paddingLeft="@dimen/std_10_dp"
                            android:textSize="@dimen/std_18_sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/std_2_dp"
                        android:layout_marginStart="@dimen/std_60_dp"
                        android:layout_marginTop="@dimen/std_10_dp"
                        android:layout_marginBottom="@dimen/std_10_dp"
                        android:layout_marginEnd="@dimen/std_60_dp"
                        android:background="@color/colorMoon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/std_40_dp"
                        android:layout_marginEnd="@dimen/std_20_dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_gallery"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/std_30_dp"
                            android:layout_weight="3"
                            android:layout_gravity="center|end"
                            android:src="@drawable/ic_gallery_latest"
                            android:backgroundTint="@color/colorAccent"
                            android:contentDescription="Image Gallery" />

                        <TextView
                            android:id="@+id/text_gallery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/std_6_dp"
                            android:layout_marginBottom="@dimen/std_10_dp"
                            android:layout_weight="1"
                            android:gravity="start|center"
                            android:text="Photo Gallery"
                            android:textColor="#333A42"
                            android:paddingLeft="@dimen/std_10_dp"
                            android:textSize="@dimen/std_18_sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/std_2_dp"
                        android:layout_marginStart="@dimen/std_20_dp"
                        android:layout_marginTop="@dimen/std_10_dp"
                        android:layout_marginEnd="@dimen/std_20_dp"
                        android:background="@color/colorMoon" />

                    <TextView
                        android:id="@+id/text_cancel_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/std_2_dp"
                        android:gravity="center"
                        android:padding="@dimen/std_10_dp"
                        android:text="CANCEL"
                        android:textColor="#FBBA00"
                        android:textSize="@dimen/std_16_sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/std_20_dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_icon"
            android:layout_width="@dimen/std_100_dp"
            android:layout_height="@dimen/std_100_dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="Image Icon"
            android:src="@drawable/ic_uploading_pending_alert"
            app:civ_border_color="@android:color/transparent"
            app:civ_border_width="@dimen/std_2_dp" />

    </RelativeLayout>
</RelativeLayout>