<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_rescue_request_coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginStart="@dimen/std_10_dp"
    android:layout_marginTop="@dimen/std_10_dp"
    android:layout_marginEnd="@dimen/std_10_dp"
    android:layout_marginBottom="@dimen/std_10_dp"
    android:background="@color/colorWhite"
    android:elevation="@dimen/std_6_dp"
    android:orientation="horizontal"
    android:paddingStart="@dimen/std_10_dp"
    app:cardCornerRadius="@dimen/std_6_dp"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/std_10_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/std_50_dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/user_rescue_request_image"
                android:layout_width="@dimen/std_50_dp"
                android:layout_height="@dimen/std_50_dp"
                android:transitionName="@string/transaction_rescue_details_photo"
                android:background="@drawable/empty_image"
                android:contentDescription="places icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/user_rescue_request_type_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/std_10_dp">

                    <TextView
                        android:id="@+id/text_user_rescue_request_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/std_10_dp"
                        android:paddingStart="@dimen/std_10_dp"
                        android:textColor="@color/colorError"
                        android:textSize="@dimen/std_14_sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_user_rescue_request_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="@color/colorVeniceBlue"
                        android:textSize="@dimen/std_14_sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/task_user_rescue_request_owner_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/std_10_dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/std_10_dp">

                    <TextView
                        android:id="@+id/text_user_rescue_request_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/std_10_dp"
                        android:paddingStart="@dimen/std_10_dp"
                        android:textSize="@dimen/std_14_sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_user_rescue_request_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/std_10_dp"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:textColor="@color/colorSuccess"
                        android:paddingStart="@dimen/std_10_dp"
                        android:textSize="@dimen/std_14_sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/text_user_rescue_request_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/std_10_dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_private_lock"
            android:drawableTint="@color/colorLightOrange"
            android:drawablePadding="@dimen/std_10_dp"
            android:gravity="start|center"
            android:hint="User Rescue Header"
            android:transitionName="@string/transaction_rescue_details_header"
            android:textColor="@color/colorBlack"
            android:paddingStart="@dimen/std_10_dp"
            android:textSize="@dimen/std_16_sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/std_10_dp"
            android:background="@color/colorBorder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/std_10_dp"
            android:layout_marginBottom="@dimen/std_10_dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="View"
                android:textSize="@dimen/std_16_sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_update_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Update"
                android:textSize="@dimen/std_16_sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/text_assign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Assign"
                android:textSize="@dimen/std_16_sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>

