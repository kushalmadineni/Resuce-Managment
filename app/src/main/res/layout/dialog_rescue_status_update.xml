<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rescue_status_update_coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/std_8_dp"
    android:layout_marginBottom="@dimen/std_8_dp">

    <ScrollView
        android:id="@+id/rescue_status_update_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false"
        android:scrollbarStyle="insideOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_rescue_status_update_main_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/std_20_dp"
                android:layout_marginLeft="@dimen/std_20_dp"
                android:layout_marginTop="@dimen/std_10_dp"
                android:textSize="@dimen/std_18_sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_rescue_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_rescue_status_update_main_header"
                android:layout_marginStart="@dimen/std_20_dp"
                android:layout_marginLeft="@dimen/std_20_dp"
                android:layout_marginTop="@dimen/std_6_dp"
                android:drawableLeft="@drawable/ic_tasks_direction"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/std_16_sp" />

            <LinearLayout
                android:id="@+id/layout_rescue_access_type_update_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/std_10_dp"
                android:layout_below="@+id/text_rescue_header"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_rescue_access_type_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/std_10_dp"
                    android:layout_marginLeft="@dimen/std_10_dp"
                    android:layout_marginBottom="@dimen/std_10_dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorVeniceBlue"
                    android:textSize="@dimen/std_18_sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_rescue_access_type_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/std_10_dp"
                    android:layout_marginLeft="@dimen/std_10_dp"
                    android:drawableEnd="@drawable/ic_drop_down"
                    android:paddingEnd="@dimen/std_10_dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/std_18_sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_rescue_status_update_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/std_10_dp"
                android:layout_below="@+id/layout_rescue_access_type_update_sub"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_rescue_status_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/std_10_dp"
                    android:layout_marginLeft="@dimen/std_10_dp"
                    android:layout_marginBottom="@dimen/std_10_dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorVeniceBlue"
                    android:textSize="@dimen/std_18_sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_rescue_status_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/std_10_dp"
                    android:layout_marginLeft="@dimen/std_10_dp"
                    android:drawableEnd="@drawable/ic_drop_down"
                    android:paddingEnd="@dimen/std_10_dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/std_18_sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_rescue_status_update_sub"
                android:layout_gravity="center"
                android:layout_margin="@dimen/std_10_dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_close"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_all_radius_rounded_deep_corner"
                    android:gravity="center"
                    android:text="Close"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/std_16_sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_all_radius_rounded_deep_corner"
                    android:gravity="center"
                    android:text="Update"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/std_16_sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>